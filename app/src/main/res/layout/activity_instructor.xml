<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_titulo_instructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GestiÃ³n de Instructores"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/edt_buscarNSS"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Buscar por NSS"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo_instructor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btn_buscar_ins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        app:layout_constraintStart_toEndOf="@id/edt_buscarNSS"
        app:layout_constraintBottom_toBottomOf="@id/edt_buscarNSS"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/btn_agregar_ins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        app:layout_constraintTop_toBottomOf="@id/edt_buscarNSS"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btn_editar_ins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:enabled="false"
        app:layout_constraintStart_toEndOf="@id/btn_agregar_ins"
        app:layout_constraintTop_toTopOf="@id/btn_agregar_ins"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/btn_eliminar_ins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:enabled="false"
        app:layout_constraintStart_toEndOf="@id/btn_editar_ins"
        app:layout_constraintTop_toTopOf="@id/btn_editar_ins"
        android:layout_marginStart="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_ins"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_agregar_ins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
